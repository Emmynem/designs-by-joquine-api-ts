		"typescript": "^5.1.6"
	},
	"dependencies": {
		"@types/morgan": "^1.9.9",
		"@types/uuid": "^10.0.0",
		"axios": "^1.7.7",
		"bcryptjs": "^2.4.3",
		"body-parser": "^1.20.3",
		"cors": "^2.8.5",
		"cross-env": "^7.0.3",
		"dotenv": "^16.4.5",
		"express": "^4.18.2",
